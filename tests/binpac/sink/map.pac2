# @TEST-EXEC: echo abcd | pac-driver-test %INPUT -- -p test::Test >output
# @TEST-EXEC: btest-diff output

module test;

export type Test = unit {
  var s: map<uint16,sink>;

  : connectit(self.s);
  : parseit(self.s);

  on %done {
    self.s[1].close();
  }
};

type connectit = unit(s: map<uint16,sink>) {
  var tmp: sink;

  a: bytes &length=1 {
    print "Connecting sink...";
    s[1] = self.tmp;
    s[1].connect(new Sub);
  }
};

type parseit = unit(s:map<uint16,sink>) {
  var tmp: sink;

  a: bytes &length=1 {
    s[1].write(self.a);
  }
};

export type Sub = unit {
  a: bytes &length=1 {
    print self.a;
  }
};
