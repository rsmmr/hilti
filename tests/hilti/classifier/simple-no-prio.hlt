# @TEST-EXEC:  btest-diff output

module Main

import Hilti

type Rule = struct {
    net saddr,
    port sport,
    net daddr,
    port dport
}

void run() {

    local bool b
    local int<64> v
    local ref<classifier<Rule, int<64>>> c

    c = new classifier<Rule, int<64>>
    classifier.add c (10.0.1.0/24, *, 10.0.2.0/24, 80/tcp) 42
    classifier.add c (10.0.1.0/24, *, 10.0.2.1/32, 80/tcp) 43
    classifier.compile c

    b = classifier.matches c (10.0.1.1/32, 1024/tcp, 10.0.2.1, 80/tcp)
    call Hilti::print (b)

    b = classifier.matches c (10.0.1.1/32, 1024/tcp, 11.0.2.1, 80/tcp)
    call Hilti::print (b)

    v = classifier.get c (10.0.1.1/32, 1024/tcp, 10.0.2.1, 80/tcp)
    call Hilti::print (v)

    return.void
}

