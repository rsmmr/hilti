module Main

import Hilti

void run() {
    local ref<bytes> b1
    local ref<bytes> b2
    local iterator<bytes> i1
    local iterator<bytes> i2
    local string s
    local int<32> i

    b1 = string.encode "01234567890" Hilti::Charset::ASCII
    call Hilti::print (b1)

    i1 = bytes.offset b1 2
    i2 = bytes.offset b1 6

    b2 = bytes.sub i1 i2
    call Hilti::print (b2)

    i1 = begin b1
    i2 = end b1
    b2 = bytes.sub i1 i2
    call Hilti::print (b2)
}
