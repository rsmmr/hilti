module Main

import Hilti

void run() {
    local ref<bytes> b
    local iterator<bytes> i
    local iterator<bytes> e

    b = b"abc"
    i = begin b
    bytes.append b b"def"
    i = incr_by i 2
    b = bytes.sub i e
    call Hilti::print(b)

    b = b""
    i = begin b
    bytes.append b b"def"
    i = incr_by i 2
    b = bytes.sub i e
    call Hilti::print(b)
}
