#
module Main

import Hilti

void run() {
    local ref<bytes> b1
    local ref<bytes> b2
    local string s

    b1 = string.encode "Hallo" "ascii"
    call Hilti::print (b1)

    b2 = string.encode "T\u00e4\u00e4\u00e4!" "utf8"
    call Hilti::print (b2)

    bytes.append b1 b2
    call Hilti::print (b1)

    s = string.decode b1 "utf8"
    call Hilti::print (s)

    s = string.decode b1 "ascii"
    call Hilti::print (s)
}
